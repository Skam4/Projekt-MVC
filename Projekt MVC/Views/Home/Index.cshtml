@model List<Projekt_MVC.Models.Forum>

@{
    ViewData["Title"] = "Home Page";

    if (ViewBag.UserId == null)
    {
        Layout = "_LayoutNieZalogowanyINieWForum";
    }
    else
    {
        Layout = "_LayoutNieWForum";
    }
}

<h1> Fora: </h1>

<html>
@if (Model == null)
{
    <p>Brak forów xd</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa Forum</th>
                <th>Opis</th>
                <th>Liczba Dyskusji</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forum in Model)
            {
                <tr>
                    <td><a href="Home/PrzejdzDoFora/@forum.IdForum">@forum.Nazwa</a></td>
                    <td>@forum.Opis</td>
                    <td>@(forum.Dyskusje != null ? forum.Dyskusje.Count : 0)</td>
                </tr>
            }
        </tbody>
    </table>
}
</html>
