@model List<Projekt_MVC.Models.Forum>
@{
    ViewData["Title"] = "Home Page";
    string layout = ViewBag.UserId == null ? "_LayoutNieZalogowanyINieWForum" : "_LayoutNieWForum";
    Layout = layout;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="@ViewBag.CurrentSkinCssFilePath">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Index.css">

</head>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.Ogloszenie))
    {
        <div class="announcement">
            <p>@ViewBag.Ogloszenie</p>
            <p>Data: @ViewBag.OgloszenieData</p>
        </div>
    }

    <div class="user-count">
        <p>Liczba zarejestrowanych użytkowników: @ViewBag.LiczbaUżytkownikow</p>
    </div>

    <h1> Fora: </h1>

    @if (ViewBag.Rola != "admin")
    {
        @if (Model == null)
        {
            <p>Brak forów xd</p>
        }
        else
        {
            <table class="forum-table">
                <thead>
                    <tr>
                        <th>Nazwa Forum</th>
                        <th>Opis</th>
                        <th>Kategoria</th>
                        <th>Liczba Dyskusji</th>
                        <th>Liczba Wiadomości</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var forum in Model)
                    {
                        <tr>
                            <td><a href="Home/PrzejdzDoFora/@forum.IdForum">@forum.Nazwa</a></td>
                            <td>@forum.Opis</td>
                            <td>@forum.Kategoria.Nazwa</td>
                            <td>@forum.LiczbaWatkow</td>
                            <td>@forum.LiczbaWiadomosci</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
    else
    {
        @if (Model == null)
        {
            <p>Brak forów xd</p>
        }
        else
        {
            @if (ViewBag.Rola == "admin")
            {
                <p>Dodaj forum: </p>
                <form method="post" asp-action="DodajForum" asp-controller="Admin">
                    <input type="text" class="forum-input" name="nazwa" placeholder="Nazwa forum" required>
                    <input type="text" class="forum-input" name="opis" placeholder="Opis forum" required>
                    <select name="idKategorii">
                        @foreach (var kategoria in ViewBag.Kategorie)
                        {
                            <option value="@kategoria.IdKategorii">@kategoria.Nazwa</option>
                        }
                    </select>
                    <button type="submit" class="forum-button">Dodaj</button>
                </form>
            }

            <div class="forum-list">
                @foreach (var forum in Model)
                {
                    <div class="forum-item">
                        <a href="Home/PrzejdzDoFora/@forum.IdForum" class="forum-link">@forum.Nazwa - @forum.Opis</a>

                        @if (ViewBag.Rola == "admin")
                        {
                            <p style="margin: auto; margin-left: 25px">Kategoria: @forum.Kategoria.Nazwa</p>
                            <form method="post" asp-action="PrzypiszModeratora" asp-controller="Admin" class="admin-form">
                                <input type="hidden" name="idForum" value="@forum.IdForum" />
                                <select name="idUzytkownika">
                                    @foreach (var user in ViewBag.Users)
                                    {
                                        <option value="@user.IdUzytkownika">@user.Nazwa</option>
                                    }
                                </select>
                                <button type="submit" class="admin-button">Przydziel moderatora</button>
                            </form>

                            <form method="post" asp-action="UsunForum" asp-controller="Admin" class="admin-form">
                                <input type="hidden" name="id" value="@forum.IdForum" />
                                <button type="submit" class="admin-button" onclick="confirmDelete(event)">Usuń</button>
                            </form>

                            <form method="post" asp-action="EdytujForum" asp-controller="Admin" class="admin-form">
                                <input type="hidden" name="id" value="@forum.IdForum" />
                                <button type="submit" class="admin-button">Edytuj</button>
                            </form>
                        }
                    </div>
                }
            </div>
        }
    }
</body>
</html>

<script>
    function confirmDelete(event) {
        var result = confirm("Czy na pewno chcesz usunąć to forum?");
        if (!result) {
            event.preventDefault();
        }
    }
</script>
