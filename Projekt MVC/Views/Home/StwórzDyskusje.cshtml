@model Projekt_MVC.Models.Dyskusja

@{
    ViewData["Title"] = "Stwórz Dyskusje";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forum</title>
</head>
<body>
    <h1 style="text-align: center">Stwórz Dyskusję</h1>

    <form method="post" class="formDyskusja">

        <label for="topic" class="inputTematDyskusji">Temat dyskusji:</label>
        <input type="text" asp-for="Temat" class="inputTematDyskusji" required><br>

        <label for="message" class="inputTematDyskusji">Twoja wiadomość:</label><br>
        <textarea id="message" asp-for="Opis" class="inputTematDyskusji" required></textarea><br>

        <button type="submit" class="buttonRozpocznijDyskusje">Rozpocznij dyskusję</button>
    </form>
</body>
</html>
