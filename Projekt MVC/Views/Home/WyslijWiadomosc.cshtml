@model Projekt_MVC.Models.Wiadomosc

@{
    ViewData["Title"] = "WyslijWiadomosc";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="@ViewBag.CurrentSkinCssFilePath">
</head>
<body>

    <h1>Wyslij Wiadomosc</h1>

    <form asp-action="WykonajWiadomosc" method="post">
        <div class="form-group">
            <label for="odbiorcaId">Odbiorca:</label>
            <select asp-for="OdbiorcaId" class="form-control" id="odbiorcaId">
                @foreach (var user in ViewBag.Users)
                {
                    <option value="@user.IdUzytkownika">@user.Nazwa</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="tresc">Treść wiadomości:</label>
            <textarea asp-for="Tresc" class="form-control" id="tresc" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Wyślij</button>
    </form>

</body>
</html> 