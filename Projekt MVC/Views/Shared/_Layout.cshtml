<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_Projekt</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header style="border-bottom ; box-shadow">
        <a href="Index" class="ForumOdnosnik">Forum</a>

        <form asp-controller="Home" asp-action="StwórzDyskusje" method="post">
            <button type="submit" class="StworzDyskusje">Stwórz Dyskusję</button>
        </form>

        <input type="text" placeholder="Wyszukaj Dyskusji" class="form-control ml-2" style="width: 800px; margin-right: 200px ; margin-left: 50px">

        <form asp-controller="Home" asp-action="Logowanie" method="post">
            <button type="submit" class="Wyloguj">Wyloguj</button>
        </form>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>