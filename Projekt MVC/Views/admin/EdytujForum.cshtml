@model Projekt_MVC.Models.Forum

@{
    ViewData["Title"] = "EdycjaForum";
}

<h1>EdytujForum</h1>

<h4>Forum</h4>
<hr />

<html>
    <div>
        <form method="post" asp-action="EdycjaForum" asp-controller="Admin" style="width: 300px;">
            <input type="hidden" name="id" value="@Model.IdForum" />
            <input type="text" class="forum" name="nazwa" placeholder="Nazwa forum" required value="@Model.Nazwa" style="width: 100%;">
            <input type="text" class="forum" name="opis" placeholder="Opis forum" required value="@Model.Opis" style="width: 100%; margin-top: 30px">
        <select name="idKategorii" style="width: 100%; margin-top: 30px">
                @foreach (var kategoria in ViewBag.Kategorie)
                {
                    <option value="@kategoria.IdKategorii">@kategoria.Nazwa</option>
                }
            </select>
        <button type="submit" class="forum" style="width: 100%; margin-top: 30px">Edytuj</button>
        </form>
    </div>


</html>